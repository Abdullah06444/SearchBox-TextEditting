<body>

    <!-- Navbar (sit on top) -->
    <div class="w3-top w3-display-container w3-content w3-wide" style="max-width:1500px; position: fixed;">
        <div class="w3-bar w3-white w3-wide w3-padding w3-card">
            <a href="#home" class="w3-bar-item w3-button">Starlang</a>
            <!-- Float links to the right. Hide them on small screens -->
            <div class="w3-right w3-hide-small">
                <a href="#searchbox" class="w3-bar-item w3-button">Search Box</a>
                <a href="#texteditting" class="w3-bar-item w3-button">Text Editting</a>
                <a href="#profil" class="w3-bar-item w3-button">Profil</a>
                <a href="/users/logout" class="w3-bar-item w3-button">Logout</a>
            </div>
        </div>
    </div>

    <!-- Header -->
    <header class="w3-display-container w3-content w3-wide" style="max-width:1500px; background: gainsboro;" id="home">
        <img class="w3-image" src="https://starlangyazilim.com/wp-content/uploads/1280x800-Transparan-Logo-Beyaz-3.png" alt="Not Found" width="300" height="100">
        <div class="w3-display-middle w3-margin-top w3-center">
            <h1 class="w3-xxlarge w3-text-white"><span class="w3-padding w3-black w3-opacity-min"><b>NLP</b></span> <span class="w3-hide-small w3-text-light-grey">Toolkit</span></h1>
        </div>
    </header>

    <!-- Page content -->
    <div class="w3-content w3-padding" style="max-width:1500px">
        <h1>Hello <%= userName.charAt(0).toUpperCase() + userName.slice(1) %></h1>

        <!-- SearchBox Section -->
        <div class="w3-container w3-padding-32" id="searchbox">
            <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Search Box</h3>
        </div>

<!-- get all cases method before display the user interface because of calculating the query time -->
<% var array = dashboard.allRetrievalTypeCases(value, platform, type) %>

        <div class="w3-row-padding w3-grayscale">
            <form action="/users/dashboard" id="queryForm" method="post">
                <div class="row height d-flex justify-content-center align-items-center">
                    <div class="col-md-8">
                        <div class="search">
                            <i class="fa fa-search"></i>
                            <input type="text" class="form-control" id="myQuery" name="myQuery" placeholder="Query">
                            <select class="btn btn-primary" id="myPlatform" name="myPlatform">
                                <!-- <option value="0">Platform</option> -->
                                <option value="1">Hepsiburada</option>
                                <option value="2">Amazon</option>
                                <option value="3">N11</option>
                                <option value="4">Çiçeksepeti</option>
                                <option value="5">Trendyol</option>
                                <option value="6">Gittigidiyor</option>
                            </select>
                            <select class="btn btn-primary" id="myRetrievalType" name="myRetrievalType">
                                <!-- <option value="0">Retrieval Type</option> -->
                                <option value="1">Ranked</option>
                                <option value="2">Positional</option>
                                <option value="3">Boolean</option>
                            </select>
                            <!-- <select class="btn btn-primary" id="DocumentWeighting">
                                <option value="0">Document Weighting</option>
                                <option value="1">No IDF</option>
                                <option value="2">IDF</option>
                                <option value="3">Probabilistic IDF</option>
                            </select> -->
                            <!-- <select class="btn btn-primary" id="TermWeighting">
                                <option value="0">Term Weighting</option>
                                <option value="1">Natural</option>
                                <option value="2">Logarithm</option>
                                <option value="3">Boole</option>
                            </select> -->
                            <button type="submit" class="btn btn-primary" onclick="">Search</button>
                        </div>
                        <!-- display calculating tne query time -->
                        <p class="w3-light-grey w3-block" style="text-align: center"><%= informationRetrieval.getTime() %> miliseconds</p>
                        <p class="w3-opacity" style="text-align: center">before the analyze => <%= array2[0] %></p>
                        <p style="text-align: center">after the analyze => <%= array2[1] %></p>
                    </div>
                </div>
            </form>
        </div>

        <div class="w3-row-padding">
            <% array.forEach(each => { %>
                <div class="w3-col l3 m6 w3-margin-bottom">
                    <% if(each.length > 0 && platform != 6) %>
                    <img src="" alt="Not Found" style="width:100%">
                    <% if(each.length > 1) %>
                    <h3 class="title"><%= each[1] %></h3>
                    <% if(each.length > 0) %>
                    <p class="w3-opacity hierarchy"><%= each[0] %></p>
                    <% if(each.length > 2) %>
                    <p class="description"><%= each[2] %></p>
                </div>
            <% }) %>
            <!-- <% if(array.length > 0) %>
                 <p><button class="w3-button w3-light-grey w3-block">Load More</button></p> -->
        </div>

        <!-- TextEditting Section -->
        <div class="w3-container w3-padding-32" id="texteditting">
            <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Text Editting</h3>
        </div>

        <div class="w3-row-padding w3-grayscale">
            <form action="" method="post">
                <div class="row height d-flex justify-content-center align-items-center">
                    <div class="col-md-8">
                        <div class="search">
                            <textarea type="text" id="myTextArea" name="myTextArea" placeholder="Text Box" style="width:100%; height:150vh;"></textarea>
                            <button type="button" class="btn btn-primary" onclick="">Control</button>
                            <button type="button" class="btn btn-primary" onclick="">Result</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Contact Section -->
        <!--<div class="w3-container w3-padding-32" id="contact">
            <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Contact</h3>
            <p>Lets get in touch and talk about your next project.</p>
            <form action="/action_page.php" target="_blank">
                <input class="w3-input w3-border" type="text" placeholder="Name" required name="Name">
