        <!-- Profil Section -->
        <div class="w3-container w3-padding-32" id="profil">
            <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Profil Ayarları</h3>
        </div>

        <!-- End page content -->
    </div>


    <!-- Footer -->
    <footer id="footer" class="w3-display-container w3-content w3-wide">
        
        <!-- Add font awesome icons -->
        <a href="#" class="fa fa-facebook"></a>
        <a href="#" class="fa fa-twitter"></a>
